{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Export Diagrams",
      "type": "shell",
      "command": "./scripts/export_diagrams.sh",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Hand-off: dry-run",
      "type": "shell",
      "command": "./ops/agent_handoff/run_codex.sh",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Hand-off: run (flip dry_run=false first)",
      "type": "shell",
      "command": "./ops/agent_handoff/run_codex.sh",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
