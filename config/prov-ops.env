# PROV Operations Configuration
# Environment variables for W3C PROV decision logging system

# S3/MinIO Configuration
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=vpm-audit-logs
S3_ACCESS_KEY_ID=vpm-audit
S3_SECRET_ACCESS_KEY=vpm-audit-secret-key # pragma: allowlist secret
S3_REGION=us-east-1

# Digital Signing Configuration
SIGNING_PRIVATE_KEY_PATH=/config/keys/signing_key.pem
SIGNING_PUBLIC_KEY_PATH=/config/keys/signing_key.pub

# PROV Schema Configuration
PROV_SCHEMA_PATH=/app/schema/prov_event.schema.json
PROV_CONTEXT_PATH=/app/schema/prov_context.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
AUDIT_LOG_PATH=/var/log/prov/audit.log

# Batch Processing Configuration
BATCH_SIZE=100
BATCH_TIMEOUT_SECONDS=300
COMPRESSION_ENABLED=true

# SPIFFE/SPIRE Configuration
SPIFFE_SOCKET_PATH=/tmp/spire-agent/public/api.sock
VPM_TRUST_DOMAIN=vpm-mini.local

# Application Configuration
APP_NAME=vpm-prov-ops
APP_VERSION=1.0.0
ENVIRONMENT=production