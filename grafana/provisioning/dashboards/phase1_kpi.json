{
  "title": "Phase 1 KPIs",
  "schemaVersion": 39,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "JSON error rate",
      "targets": [
        {
          "expr": "vector(0)",
          "datasource": {
            "type": "prometheus",
            "uid": "prom-k8s"
          }
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prom-k8s"
      }
    },
    {
      "type": "timeseries",
      "title": "p50 latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le)(rate(prometheus_http_request_duration_seconds_bucket[5m])))",
          "datasource": {
            "type": "prometheus",
            "uid": "prom-k8s"
          }
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prom-k8s"
      }
    },
    {
      "type": "timeseries",
      "title": "ROUGE-L (placeholder)",
      "targets": [
        {
          "expr": "avg(rouge_l_score)"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 8
      }
    }
  ]
}